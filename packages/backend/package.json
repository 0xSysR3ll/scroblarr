{
  "name": "@scroblarr/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "NODE_OPTIONS='--no-warnings' tsx watch --clear-screen=false src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src && prettier --check \"src/**/*.{ts,json}\"",
    "lint:fix": "eslint src --fix && prettier --write \"src/**/*.{ts,json}\"",
    "lint:eslint": "eslint src",
    "lint:eslint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "migration:run": "tsx src/scripts/runMigrations.ts",
    "migration:generate": "typeorm-ts-node-esm migration:generate -d typeorm.config.ts",
    "migration:revert": "typeorm-ts-node-esm migration:revert -d typeorm.config.ts",
    "seed": "tsx src/scripts/seedDatabase.ts"
  },
  "dependencies": {
    "@scroblarr/shared": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "js-yaml": "^4.1.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "puppeteer": "^24.34.0",
    "reflect-metadata": "^0.1.13",
    "rotating-file-stream": "^3.2.7",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.17",
    "xml2js": "^0.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/xml2js": "^0.4.14",
    "tsx": "^4.7.0",
    "typeorm-ts-node-esm": "^0.3.20",
    "typescript": "^5.3.3"
  }
}
